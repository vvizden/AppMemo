{
  "name": "simple-memo",
  "version": "0.1.0",
  "description": "For memorizing some web apps.",
  "main": "dist/main.js",
  "author": "viz",
  "scripts": {
    "compile": "tsc",
    "watch": "rushx compile -- -w",
    "dev": "env-cmd -e dev electron ./dist/main.js",
    "build": "rushx compile && electron-builder",
    "prisma-introspect": "yarn prisma db pull",
    "prisma-generate": "yarn prisma generate"
  },
  "build": {
    "appId": "me.viz.AppMemo",
    "productName": "备忘录",
    "copyright": "Copyright © 2022 viz",
    "directories": {
      "output": "release"
    },
    "publish": null,
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "./dist",
      {
        "from": "node_modules/.prisma/client/",
        "to": "node_modules/.prisma/client/"
      }
    ]
  },
  "dependencies": {
    "@prisma/client": "^3.7.0",
    "app-api": "^0.1.0",
    "electron-ipc-main": "^0.1.0",
    "electron-store": "^8.0.1",
    "module-alias": "^2.2.2"
  },
  "devDependencies": {
    "@types/module-alias": "^2.0.1",
    "@types/node": "^16.11.11",
    "electron": "16.0.6",
    "electron-devtools-installer": "^3.2.0",
    "electron-reloader": "^1.2.1",
    "env-cmd": "^10.1.0",
    "prisma": "^3.7.0",
    "typescript": "^4.5.2",
    "electron-builder": "^22.14.5"
  }
}
